{% block title %}{{ "page.user.resetting.request.title"|trans }}{% endblock %}

{% extends "::base.html.twig" %}
{% block body %}
    <div class="container page-content">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                            <div class="form-group">
                                <label for="username">{{ 'page.user.resetting.request.email'|trans }}</label>
                                <input type="text" id="username" name="username" class="form-control" required="required" />
                            </div>
                            <div>
                                <input type="submit" class="btn btn-primary" value="{{ 'page.user.resetting.request.submit'|trans }}" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}