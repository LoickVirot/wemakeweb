{% extends 'admin/admin.html.twig' %}

{% block admin_body %}
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-sm float-right">Create</a>
    <h2>Categories</h2>
    <br>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_edit', { 'id': category.id }) }}"><span class="oi oi-pencil"></span>&nbsp;Edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-sm float-right">Create</a>
{% endblock %}
