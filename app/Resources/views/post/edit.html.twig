{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('style/trumbowyg.min.css') }}">
    <link rel="stylesheet" href="{{ asset('style/jquery.tagsinput.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('javascript/trumbowyg.min.js') }}"></script>
    <script src="{{ asset("javascript/jquery.tagsinput.min.js") }}"></script>

    <script>
        $.trumbowyg.svgPath = '/';
        $(document).ready(function() {
            $.trumbowyg.svgPath = "{{ asset('svg/trumbowyg/icons.svg') }}";

            $('#appbundle_post_content').trumbowyg({
                btns: [['formatting'], 'strong', 'em', '|', 'link', 'insertImage'],
                autogrow: true
            });

            $('#appbundle_post_tags').tagsInput({
                'height':'45px',
                'width':'100%',
                'placeholderColor' : '#FF00000'
            });
        });
    </script>
{% endblock %}

{% block body %}
    <div class="container page-content" id="post-edit">
    <h1>Post edit</h1>
    
    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <div class="float-right">
            <a href="{{ path('post_show', {slug: post.slug}) }}" class="btn btn-outline-secondary">Cancel</a>
            <input type="submit" value="Edit" class="btn btn-primary"/>
        </div>
    {{ form_end(edit_form) }}

    {{ form_start(delete_form) }}
        <a href="{{ path('post_index') }}" class="btn btn-outline-secondary">All articles</a>                    
        <input type="submit" value="Delete" class="btn btn-outline-danger">
    {{ form_end(delete_form) }}
</div>
{% endblock %}